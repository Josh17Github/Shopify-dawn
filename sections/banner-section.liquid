<section class="speech-banner" style="background-color: {{ section.settings.banneBg }};">
    <div class="banner-speech-container">
        <h3 class="sub-heading"> {{ section.settings.bannerSubHeading }} </h3>
        <h1 class="heading-title"> {{ section.settings.bannerHeading }} </h1>
        {% if section.settings.imageSpeechBanner != null %}
            <img src="{{ section.settings.imageSpeechBanner | img_url: "master" }}" width="950" height="700">
        {% else %}
            <img src="{{ 'image-banner.jpg' | asset_url }}" width="950" height="700">
        {% endif %}
    </div>
</section>

{%  style %}
.speech-banner {
    height: 50vh;
}
.banner-speech-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    height: 80vh;
    padding-top: 40px;
    margin-bottom: -100px;
}
.sub-heading {
    color: #ffffff;
    text-transform: uppercase;
    font-weight: 700;
    font-size: 16px;
    margin-bottom: -14px;
}
.heading-title {
    color: #ffffff;
    margin: 15px;
    padding-bottom: 10px;
    font-size: 40px;
    font-family: cursive;
    font-weight: 700;
}
.banner-speech-container img {
    border-radius: 5px;
    z-index: 2;
}
