@media screen and (max-width: 980px) {
    .speech-banner  {
        height: 80vh;
    }
    .banner-speech-container {
        height: 80vh;
        margin-bottom: 0;
    }
    .speech-banner  {
        height: 40vh;
    }
    .banner-speech-container {
        height: 40vh;
    }
    .banner-speech-container img {
        width: 700px;
        height: 400px;
    }
}
@media (max-width: 700px) {
    .speech-banner  {
        height: 40vh;
    }
    .heading-title {
        font-size: 30px;
    }
    .sub-heading {
        font-size: 14px;
    }
    .banner-speech-container {
        height: 40vh;
    }
    .banner-speech-container img {
        width: 100%;
        height: auto;
    }
}
@media (max-width: 480px) {
    .heading-title {
        font-size: 20px;
    }
    .sub-heading {
        font-size: 12px;
    }
    .speech-banner  {
        height: 40vh;
    }
    .banner-speech-container {
        height: 40vh;
    }
    .banner-speech-container img {
        width: 100%;
        height: 300px;
    }
}

{% endstyle %}

{% schema %}
    {
        "name": "Banner Section",
        "settings": [
            {
                "type": "image_picker",
                "id": "imageSpeechBanner",
                "label": "Image Banner",
            },
            {
                "type": "color_background",
                "id": "banneBg",
                "label": "Background",
                "default": "linear-gradient(#ffffff, #000000)"
            },
            {
                "type": "text",
                "id": "bannerHeading",
                "label": "Heading",
                "default": "Speech For Kids Programs"
            },
            {
                "type": "text",
                "id": "bannerSubHeading",
                "label": "Sub Heading",
                "default": "Programs"
            },
            
        ],  
        "presets": [
            {
                "name": "Banner Section"
            }
        ]
    }
{% endschema %}