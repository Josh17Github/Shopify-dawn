<section class="girl-banner-page">
    <div class="banner-girl">
        {% if section.settings.bannerImage != null %}
            <img src=" {{ section.settings.bannerImage | img_url: 'master'}}" width="100" height="100">
        {% else %}    
            <img src="{{ 'landing-page-girl.png' | asset_url }}" width="100" height="100">
        {% endif %}
    </div>
    <div class="banner-content">
        <h1>{{ section.settings.heading }}</h1>
        <p>{{ section.settings.contectText }} </p>
        <button>Join Now</button>
    </div>
</section>

{% style %}
  .girl-banner-page {
    width: 100%;
    height: 100vh;
    display: flex;
    align-items: end;
    justify-content: center;
    background-color: #2F303A;
    gap: 20px;
    padding: 0 20px;
  }
  .banner-girl img {
    width: 100%;
    height: 100vh;
  }
  .banner-content {
    line-height: 40px;
    align-self: flex-start;
    padding-top: 50px;
    flex-basis: 45%;
  }
  .banner-content h1 {
    font-size: 4.5em;
    font-weight: 400;
    letter-spacing: 2px;
    color: #ffffff;
  }
  .banner-content p {
    font-size: 2.2em;
    font-weight: 400;
    letter-spacing: 2px;
    color: #ffffff;
  }
  button {
    padding: 22px 36px;
    border-radius: 7px;
    border: 0.5px;
    background-color: rgba(6, 112, 199, 0.582);
    font-size: 18px;
    font-weight: 300;
    letter-spacing: 2px;
    text-align: center;
    color: #ffffff;
    cursor: pointer;
  }
    button:hover {
        background-color: rgb(20, 105, 175);
        transition: color 0.3s ease;
    }

  @media (max-width: 1024px) {
    .girl-banner-page {
        padding: 0px 10px;
    }
    .banner-content {
        line-height: 20px;
    }
    .banner-content h1 {
        font-size: 4em;
    }
    .banner-content p {
        font-size: 2em;
    }
  }
  @media (max-width: 989px) {
    .girl-banner-page {
        display: flex;
        flex-direction: column;
        height: auto;
        align-items: center;
        justify-content: center;
        position: relative;
        padding: 0 30px;
    }
    .banner-girl img {
        width: 100%;
    }
    .banner-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        position: absolute;
        align-self: center;
    }
    .banner-content p {
        font-size: 2em;
        line-height: 30px;
        padding: 20px 50px;
    }
    button {
        font-size: 14px;
        padding: 20px 32px;
    }
}
@media (max-width: 600px) {
    .banner-content h1{
        margin-bottom: 0px;
    }
}
    @media (max-width: 480px) { 
        .banner-girl img {
            width: 100%;
            height: auto;
            padding: 30px 0 0 0;
        }
        .banner-content {
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .banner-content h1 {
            font-size: 2.4em;
        }
        .banner-content p {
            font-size: 1em;
            padding: 20px 50px;
        }
        button {
            font-size: 12px;
            padding: 18px 30px;
        }
  }

{% endstyle %}

{% schema %}
    {
        "name": "soundwave-banner-page",
        "settings": [
            {
                "type": "image_picker",
                "id": "bannerImage",
                "label": "Banner"
            },
            {
                "type": "inline_richtext",
                "id": "heading",
                "label": "Heading Text"
            },
            {
                "type": "textarea",
                "id": "contectText",
                "label": "Content",
                "default": "Stream over 20 thousand songs with one click"
            },

        ],
        "presets": [
            {
                "name": "soundwave-banner-page"
            }
        ]
    }
{% endschema %}