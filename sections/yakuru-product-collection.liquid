            background-color: #bbb;
            border-radius: 50%;
            transition: background-color 0.6s ease;
            margin: 0 auto;
        } */
    }

{% endstyle %}


<script>
    const swiper = new Swiper('.swiper', {
        // Optional parameters  
        loop: true,
        slidesPerView: 1,
        autoplay: {
            delay: 2500,
            disableOnInteraction: false,
        },
      
        // If we need pagination
        pagination: {
          el: '.swiper-pagination',
        },
      
        // Navigation arrows
        {% comment %} navigation: {
          nextEl: '.swiper-button-next',
          prevEl: '.swiper-button-prev',
        }, {% endcomment %}
      
        // And if we need scrollbar
        {% comment %} scrollbar: {
          el: '.swiper-scrollbar',
        }, {% endcomment %}
        breakpoints: {
            768: {
              slidesPerView: 2,
              spaceBetween: 10,
            },
            980: {
              slidesPerView: {{ section.settings.viewPerPage }},
              spaceBetween: 20,
            },
        },
      });

</script>
{% schema %}
    {
        "name": "New featured product",
        "settings": [
            {
                "type": "text",
                "id": "headingText",
                "label": "Heading",
                "default": "Yakuru Product Collection"
            },
            {
                "type": "range",
                "id": "viewPerPage",
                "min": 3,
                "max": 5,
                "step": 1,
                "label": "Product Per Page",
                "default": 3
            }
            
        ],
        "presets": [
            {
                "name": "New featured product"
            }
        ],
        "blocks": [
            {
                "type": "Product",
                "name": "Products",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "imgPicker",
                        "label": "Choose Image"
                    },
                    {
                        "type": "text",
                        "id": "producName",
                        "label": "Product Name",
                        "default": "Product Name"
                    },
                    
                ]
            },
        ]
        
    }
{% endschema %}